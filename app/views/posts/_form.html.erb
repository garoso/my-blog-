<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h1><%= form_title %></h1>
      <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo del post" %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, rows: 10, class: "form-control input-lg", placeholder: "Ingresa el contenido del post" %>
      </div>
        <%= f.submit form_title, class: "btn btn-dark btn-lg btn-block" %>
        <% end %>
    </div>
  </div>
</div>
